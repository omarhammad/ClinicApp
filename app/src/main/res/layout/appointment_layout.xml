<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

   <RelativeLayout
       android:layout_width="match_parent"
       android:padding="5dp"
       android:layout_height="match_parent">

       <ImageView
           android:id="@+id/clock"
           android:layout_width="wrap_content"
           android:src="@drawable/ic_clock"
           android:layout_height="wrap_content" />

       <ImageView
           android:id="@+id/date"
           android:layout_width="wrap_content"
           android:src="@drawable/ic_calendar"
           android:layout_below="@+id/clock"
           android:layout_height="wrap_content" />

       <ImageView
           android:id="@+id/user_photo"
           android:layout_width="wrap_content"
           android:src="@drawable/ic_account_blue"
           android:layout_below="@+id/date"
           android:layout_height="wrap_content" />
       <TextView
           android:id="@+id/show_time"
           android:layout_width="wrap_content"
           android:text="10:00 AM - 11:00 AM"
           android:textStyle="bold"
           android:textColor="#3a48a3"
           android:textSize="17sp"
           android:layout_toRightOf="@+id/clock"
           android:layout_marginTop="3dp"
           android:layout_height="wrap_content" />
       <TextView
           android:id="@+id/show_user_name"
           android:layout_width="wrap_content"
           android:text="Omar hammad"
           android:textStyle="bold"
           android:textColor="#6876ba"
           android:textSize="16sp"
           android:layout_toRightOf="@+id/user_photo"
           android:layout_marginTop="5dp"
           android:layout_below="@+id/date"
           android:layout_marginStart="5dp"
           android:layout_height="wrap_content" />
       <TextView
           android:id="@+id/show_date"
           android:layout_width="wrap_content"
           android:text="Saturday, 9/12/2017"
           android:textStyle="bold"
           android:textColor="#6876ba"
           android:textSize="16sp"
           android:layout_toRightOf="@+id/date"
           android:layout_marginTop="5dp"
           android:layout_below="@+id/clock"
           android:layout_marginStart="5dp"
           android:layout_height="wrap_content" />
       <TextView
           android:id="@+id/show_state"
           android:layout_width="70dp"
           android:padding="3dp"
           android:textColor="#fff"
           android:textSize="13sp"
           android:textStyle="bold"
           android:layout_alignParentEnd="true"
           android:layout_margin="10dp"
           android:background="@drawable/appointment_state"
           android:text="Pending"
           android:textAlignment="center"
           android:layout_height="wrap_content" />



   </RelativeLayout>

</android.support.v7.widget.CardView>