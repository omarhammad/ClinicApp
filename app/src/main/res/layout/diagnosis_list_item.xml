<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/disease_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="serif"
            android:text="Influance"
            android:textColor="#000"
            android:textSize="23sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_photo"
            android:src="@drawable/ic_clock" />

        <ImageView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clock"
            android:src="@drawable/ic_calendar" />

        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/disease_name"
            android:src="@drawable/ic_account_blue" />

        <TextView
            android:id="@+id/diagnosis_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_photo"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/clock"
            android:text="10:00 AM - 11:00 AM"
            android:textColor="#3a48a3"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/disease_name"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/user_photo"
            android:text="Omar hammad"
            android:textColor="#6876ba"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/diagnosis_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clock"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/date"
            android:text="Saturday, 9/12/2017"
            android:textColor="#6876ba"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>