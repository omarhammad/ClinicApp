<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fb0c9"
    android:padding="8dp"
    android:windowSoftInputMode="adjustPan"
    tools:context="com.example.desmond.clinc.View.AddMedicines">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/medicenes_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.6"
            android:background="#fff"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="0.4"
            android:background="@drawable/draw_edit_text"
            android:orientation="horizontal"
            android:weightSum="6"
            android:padding="8dp">


            <EditText
                android:id="@+id/medicine_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:backgroundTint="@android:color/transparent"
                android:hint="Add Medicene" />

            <ImageView
                android:id="@+id/push_btn"
                android:layout_width="0dp"
                android:elevation="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_push_item_2" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>
