<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fb0c9"
    android:padding="15dp"
    tools:context="com.example.desmond.clinc.View.ProfileFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/timeline_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_timeline" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="110dp"
                android:clickable="true"
                android:layout_height="110dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="96dp"
                android:src="@drawable/avatar_profile" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="#434242"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/address"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/profile_name"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_uesr_location" />

            <ImageView
                android:id="@+id/phonenum"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/address"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_mobile" />

            <ImageView
                android:id="@+id/email"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/phonenum"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_email" />

            <TextView
                android:id="@+id/profile_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/phonenum"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@+id/address"
                android:textColor="#434242"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/profile_phonenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_address"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/phonenum"
                android:textColor="#434242"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phonenum"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/address"
                android:textColor="#434242"
                android:textSize="17sp" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/edit_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:background="@drawable/edit_button"
            android:clickable="true"
            android:elevation="6dp"
            android:src="@drawable/ic_edit" />


    </android.support.v7.widget.CardView>

</FrameLayout>


