<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fb0c9"
    tools:context="com.example.desmond.clinc.View.ShowDiagnosis">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="#fff"
        android:padding="8dp">

        <TextView
            android:id="@+id/disease_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Influnce"
            android:textColor="#000"
            android:textSize="20sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/diagnosis_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/disease_name"
            android:text="( 56$ )"
            android:textColor="#d67601"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/disease_name"
            android:layout_marginTop="10dp"
            android:text="Patient/Doctor:Omar Hammad"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/diagnosis_blank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginTop="20dp"
            android:background="@drawable/draw_edit_text"
            android:gravity="top"
            android:lines="12"
            android:padding="8dp"
            android:text="dfsdfdfdfs"
            android:textColorHint="#d67601"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/medicine_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/diagnosis_blank"
            android:layout_margin="10dp"
            android:text="Medicines"
            android:textSize="20sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/medicenes_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/medicine_title"
            android:layout_margin="10dp" />

    </RelativeLayout>


</ScrollView>
